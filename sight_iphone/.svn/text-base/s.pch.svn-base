/*****************************************************
 * DEBUG环境下会输出Log日志，Release环境下不会输出
 *****************************************************/
#ifdef DEBUG
#define SLog(fmt, ...) NSLog((@"[%s] [Line:%d] " fmt),  __PRETTY_FUNCTION__, __LINE__, ##__VA_ARGS__)
#else
#define SLog(fmt, ...) do{} while(0)
#endif




/*****************************************************
 * DEBUG环境下会输出View的Frame日志，Release环境下不会输出
 *****************************************************/

#define SLogRect(frame) SLog(@"[%s]:{%.2f %.2f; %.2f %.2f}", (#frame), (frame).origin.x, (frame).origin.y, (frame).size.width, (frame).size.height)

#define SLogSize(size) SLog(@"[%s]:{%.2f, %.2f}", (#size), size.width, size.height);

////////////////////////////////////////////////////////////////////////////////////
// Asserts
#ifdef DEBUG
#define SSAssertDebug(COND, fmt, ...) NSAssert((COND), (@"%s (Line:%d) " fmt), __PRETTY_FUNCTION__, __LINE__, ##__VA_ARGS__)
#else
#define SSAssertDebug(COND, fmt, ...) do {}while(0)
#endif

#define SSParameterAssert(COND) SSAssertDebug(COND, @"Invalid parameter, not satisfying: \"%s\"", #COND)

#define ThrowNotImplementedException() \
do {\
SSAssertDebug(NO, @"%s is not implemented", __PRETTY_FUNCTION__);\
}while(0)

#define IgnorePerformSelectorLeakWarningInARC(Stuff) \
do { \
_Pragma("clang diagnostic push") \
_Pragma("clang diagnostic ignored \"-Warc-performSelector-leaks\"") \
Stuff \
_Pragma("clang diagnostic pop") \
} while (0)




